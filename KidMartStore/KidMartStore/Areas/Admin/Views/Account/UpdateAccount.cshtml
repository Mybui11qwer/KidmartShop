﻿@model KidMartStore.Models.Customer
@{
    ViewBag.Title = "Cập nhật nhân viên";
    ViewBag.Pages = "UpdateAccount";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="text-center mb-4">Cập Nhật Tài Khoản</h2>
    <div class="card p-4">
        @using (Html.BeginForm("UpdateAccount", "Account", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.ID_Customer)

            <div class="mb-3">
                <label class="form-label">Tên đăng nhập</label>
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Số điện thoại</label>
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Địa chỉ</label>
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Giới tính</label>
                @Html.DropDownListFor(model => model.Gender,
                    new SelectList(new[] { "Nam", "Nữ", "Khác" }),
                    "-- Chọn giới tính --", new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Cập Nhật</button>
        }
    </div>
</div>
