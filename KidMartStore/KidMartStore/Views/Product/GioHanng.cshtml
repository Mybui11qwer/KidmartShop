@model List<KidMartStore.Models.Product>
@{
    ViewBag.Title = "GioHanng";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/CSS/Cart.css" />
<div class="cart-container">
    <div class="cart-item">
        <div class="item-remove">x</div>
        <div class="item-image">
            <img src="product.jpg" alt="Product Image">
        </div>
        <div class="item-details">
            <p>Bộ quần áo Mixi nỉ da cá 02 (logo đỏ)</p>
            <span class="item-size">L</span>
        </div>
        <div class="item-price">520,000₫</div>
        <div class="item-quantity">
            <button>-</button>
            <input type="text" value="1">
            <button>+</button>
        </div>
    </div>
    <div class="order-notes">
        <label for="order-notes">Ghi chú đơn hàng</label>
        <textarea id="order-notes" rows="2"></textarea>
    </div>
    <div class="checkout">
        <h3>HẸN GIỜ CHECK ĐƠN</h3>
        <div class="check-time">
            <label for="check-date">Ngày nhận check đơn</label>
            <input type="date" id="check-date" value="2024-11-13">
        </div>
        <div class="check-time">
            <label for="check-time">Thời gian nhận check đơn</label>
            <select id="check-time">
                <option>Chọn thời gian</option>
                <option>08:00</option>
                <option>12:00</option>
                <option>16:00</option>
            </select>
        </div>
        <div class="total">
            <span>TỔNG CỘNG</span>
            <span class="total-amount">520,000₫</span>
        </div>
        <button class="checkout-button">Thanh Toán</button>
    </div>
</div>

