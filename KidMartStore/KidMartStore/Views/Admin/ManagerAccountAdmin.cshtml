@model List<KidMartStore.Models.Customer>
@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/Content/CSS/_manageradmin.css" />
<section class="user-table">
    <table>
        <thead>
            <tr>
                <th>Tên</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Tùy chọn</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Where(c => c.Role == "Quản Lý" || c.Role == "Nhân Viên"))
            {
                <tr>
                    <td>@customer.Username</td>
                    <td>@customer.Phone</td>
                    <td>@customer.Email</td>
                    <td>@customer.Address</td>
                    <td>
                        <a href="#" class="edit">Chỉnh sửa</a>
                        <a href="@Url.Action("DeleteAccountAdmin", "Function", new { id = customer.ID_Customer})" class="delete" onclick="return confirm('Bạn chắc chắn muốn xóa người dùng này không?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("ExportCustomersToExcel", "Admin")" class="btn btn-success">Xuất Excel</a>
</section>

