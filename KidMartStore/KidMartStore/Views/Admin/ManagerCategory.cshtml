@model List<KidMartStore.Models.Category>
@{
    ViewBag.Title = "Quản lý loại sản phẩm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/Admin/ManagerProduct.css" />
<section class="product-table">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Loại sản phẩm</th>
                <th>Yêu cầu</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categories in Model)
            {
                <tr>
                    <td>@categories.ID_Category</td>
                    <td>@categories.Name_Category</td>
                    <td>
                        <a href="@Url.Action("UpdateProduct", "Admin", new { id = categories.ID_Category })" class="edit">Chỉnh sửa</a>
                        <a href="#" class="delete">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button class="add-product" onclick="window.location.href='AddNewCategory'">Thêm loại sản phẩm</button>
</section>

