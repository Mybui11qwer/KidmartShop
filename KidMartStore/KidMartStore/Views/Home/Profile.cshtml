@model KidMartStore.Models.Customer

@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/CSS/Thongtinnguoidung.css" />
<section class="information-top"></section>
<main class="Infor-Account">
    <div class="content1">
        <h3>Thông tin tài khoản</h3>
        <section class="Information-content-left">
            <h5>Xin chào <span>@(Session["Name"] ?? "Guest")!</span></h5>
            <a href="~/Home/Profile">Thông tin tài khoản</a><br />
            <a href="~/Home/Address">Địa chỉ</a>
        </section>
    </div>
    <div class="content2">
        <section class="Information-content-right">
            <h3>Tài khoản của bạn</h3>
            <div class="Information-User" id="section1">
                <h6>Tên người dùng: <span>@Session["Name"]</span></h6>
                <h6>Địa chỉ: <span>@(Model.Address ?? "Người dùng chưa đăng ký địa chỉ")</span></h6>
                <h6>Địa chỉ Email: <span>@Session["Email"]</span></h6>
                <h6>Số điện thoại: <span>@Session["Phone"]</span></h6>
                <button onclick="changeSection()">Chỉnh sửa thông tin</button>
            </div>
            <div class="Information-User" id="section2" style="display: none">
                <form action="/Home/Profile" method="post">
                    <input type="email" name="Email" style="cursor:not-allowed" placeholder="@Session["Email"]" readonly />
                    <input type="text" name="Username" placeholder="@Session["Name"]" required />
                    <input type="text" name="Address" placeholder="@Session["Address"]" required />
                    <input type="tel" name="Phone" placeholder="@Session["Phone"]" required />
                    <input type="submit" value="Hoàn tất" />
                </form>
                <button onclick="changeSection()">Quay lại</button>
            </div>
        </section>
    </div>
    <script>
        function changeSection() {
            // Lấy phần tử section 1 và section 2
            const section1 = document.getElementById("section1");
            const section2 = document.getElementById("section2");

            // Kiểm tra và chuyển đổi hiển thị của từng section
            if (section1.style.display === "none") {
                section1.style.display = "block";
                section2.style.display = "none";
            } else {
                section1.style.display = "none";
                section2.style.display = "block";
            }
        }
    </script>

</main>

