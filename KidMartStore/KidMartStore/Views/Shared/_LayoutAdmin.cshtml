<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KidMartStore</title>
    <link rel="stylesheet" href="~/Content/Layout/_layout.css" />

</head>
<body>
    <div class="above-header">
        <nav class="Logo-text" style="margin-left: 50px">
            <a href="~/Home/Index"><h3>KidMart</h3></a>
        </nav>
    </div>
    <div class="sidebar">
        <h2>Quản trị viên</h2>
        <ul>
            <li>
                <a href="~/Admin/Dashboard">Dashboard</a>
            </li>
            <li>
                <a onclick="toggleMenu(this)">Người dùng</a>
                <ul class="sub-menu">
                    <li><a href="~/Admin/ManagerAccount">Danh sách khách hàng</a></li>
                    <li><a href="~/Admin/ManagerAccountAdmin">Danh sách nhân viên</a></li>
                    <li><a href="~/Function/AddNewAccount">Thêm nhân viên mới</a></li>
                </ul>
            </li>
            <li>
                <a onclick="toggleMenu(this)">Sản phẩm</a>
                <ul class="sub-menu">
                    <li><a href="~/Admin/ManagerProduct">Danh sách sản phẩm</a></li>
                    <li><a href="~/Function/AddNewProduct">Thêm sản phẩm</a></li>
                </ul>
            </li>
            <li>
                <a onclick="toggleMenu(this)">Loại sản phẩm</a>
                <ul class="sub-menu">
                    <li><a href="~/Admin/ManagerCategory">Danh sách loại sản phẩm</a></li>
                    <li><a href="~/Function/AddNewCategory">Thêm loại sản phẩm</a></li>
                </ul>
            </li>
            <li>
                <a onclick="toggleMenu(this)">Thống kê</a>
            </li>
            <li>
                <a onclick="toggleMenu(this)">Cài đặt</a>
                <ul class="sub-menu">
                    <li><a href="~/Admin/ManagerCategory">Thông tin cá nhân</a></li>
                    <li><a href="~/Function/AddNewCategory">Thay đổi mật khẩu</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="main-content">
        <header>
            <h1>Chào mừng đến với trang quản trị</h1>
            <div class="user-info">
                <span>Xin chào, @Session["Name"]</span>
                <a href="~/Admin/Logout" class="logout">LogOut</a>
            </div>
        </header>
        @RenderBody()
    </div>
    <script>
        function toggleMenu(element) {
            var subMenu = element.nextElementSibling;
            if (subMenu.style.display === "block") {
                subMenu.style.display = "none";
            } else {
                subMenu.style.display = "block";
            }
        }
    </script>
</body>
</html>
