﻿@model KidMartStore.Models.Product
@{
    ViewBag.Title = "Cập nhật sản phẩm";
    ViewBag.Pages = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/Content/CSS/_addnewadmin.css" />
<div class="container">
    <h2 class="text-center mb-4">Cập Nhật Tài Khoản</h2>
    <div class="card p-4">
        @using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.ID_Product)

            <div class="mb-3">
                <label class="form-label">Tên sản phẩm</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Giá sản phẩm</label>
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Số lượng tồn kho</label>
                @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Thông tin sản phẩm</label>
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control"})
            </div>

            <div class="form-group">
                <label for="product-image">Hình ảnh</label>
                <img id="preview" src="~/Image/Product/@Model.Image" alt="Image Preview" style="width: 200px; height: 200px; margin-top: 10px;">
            </div>

            <button type="submit" class="btn btn-primary">Cập Nhật</button>
        }
    </div>
</div>

