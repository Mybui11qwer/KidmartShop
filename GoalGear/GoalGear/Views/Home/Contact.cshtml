@{
    ViewBag.Title = "Liên hệ CoffeeStore";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/CSS/Contact.css" />

<main class="contact-container">
    <section class="contact-info">
        <h2>Liên hệ CoffeeStore</h2>
        <p>Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn. Hãy liên hệ với chúng tôi qua các thông tin dưới đây:</p>

        <div class="contact-details">
            <div class="contact-item">
                <i class="fas fa-map-marker-alt"></i>
                <p><strong>Địa chỉ:</strong> TPHCM, Quận 1</p>
            </div>
            <div class="contact-item">
                <i class="fas fa-phone"></i>
                <p><strong>Điện thoại:</strong> 0908366673</p>
            </div>
            <div class="contact-item">
                <i class="fas fa-envelope"></i>
                <p><strong>Email:</strong> coffeestore@gmail.com</p>
            </div>
            <div class="contact-item">
                <i class="fas fa-globe"></i>
                <p><strong>Website:</strong> <a href="https://shop.coffeestore.com">shop.coffeestore.com</a></p>
            </div>
        </div>
    </section>

    <section class="contact-form">
        <h3>Gửi tin nhắn cho chúng tôi</h3>
        <form action="/Home/SendMessage" method="post">
            <div class="form-group">
                <label for="name">Tên của bạn:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">Email của bạn:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="message">Tin nhắn:</label>
                <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit">Gửi tin nhắn</button>
        </form>
    </section>
</main>

<script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>